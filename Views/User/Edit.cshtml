
@{
    Layout = null;
}
@model aspnetmvcmethods.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <form action="/User/Edit" method="post">
            <input type="Hidden" name="id" value="@Model.Id" />
            <label> Name</label>
            <input type="text" name="name" value="@Model.Name" />
            <label> Surname</label>
            <input type="text" name="surname" value="@Model.Surname" />
            <label> Age</label>
            <input type="text" name="age" value="@Model.Age" />
            <input type="submit" />
        </form>
    </div>
</body>
</html>
